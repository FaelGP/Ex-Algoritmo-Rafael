#include <stdio.h>

main(){

    int codigo, quantidade;
    float valor;

    printf ("Informe o codigo do produto desejado:");
    scanf("%d",&codigo);

  switch (codigo)
  {
  case 100:
    printf("Informe a quantidade desejada:");
    scanf("%d",&quantidade);
    valor = quantidade10.10;
    printf("O valor do seu pedido e :%.2f",valor);
    break;

    case 101:
    printf("Informe a quantidade desejada:");
    scanf("%d",&quantidade);
    valor = quantidade8.30;
    printf("O valor do seu pedido e :%.2f",valor);
    break;

    case 102:
    printf("Informe a quantidade desejada:");
    scanf("%d",&quantidade);
    valor = quantidade8.50;
    printf("O valor do seu pedido e :%.2f",valor);
    break;

    case 103:
     printf("Informe a quantidade desejada:");
     scanf("%d",&quantidade);
     valor = quantidade12.50;
     printf("O valor do seu pedido e :%.2f",valor);
    break;

    case 104:
    printf("Informe a quantidade desejada:");
    scanf("%d",&quantidade);
    valor = quantidade*13.25;
    printf("O valor do seu pedido e :%.2f",valor);
    break;
    
  default:
  printf("O codigo informado nao refere a nenhum produto da lanchonete.");
    break;
  }
