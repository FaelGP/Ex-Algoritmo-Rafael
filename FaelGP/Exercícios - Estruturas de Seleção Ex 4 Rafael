#include <stdio.h>

int main(){

    float num1, num2;
    char operacao;

    printf ("\nInforme o primeiro numero:");
    scanf ("%f",&num1);

    printf("\nInforme o segundo numero:");
    scanf("%f",&num2);

    printf("\nEscolha uma opcao:");
    printf("\n1-Somar");
    printf("\n2-Subtrair");
    printf("\n3-Dividir");
    printf("\n4-Multiplicar\n");
    scanf("%s",&operacao);

    switch (operacao)
    {
    case '1':
    printf ("Voce escolheu a soma e o resultado e %.2f", num1+num2);
    break;
    case '2':
    printf ("Voce escolheu a subtracao e o resultado e %.1f", num1-num2);
    break;
    case '4':
    printf ("Voce escolheu a multiplicacao e o resultado e %.1f", num1*num2);
    break;
    case '3':
    printf ("Voce escolheu a divisao e o resultado e %.1f", num1/num2);
    break;
    default :
        printf("A opercao e invalida.");
    }
}
