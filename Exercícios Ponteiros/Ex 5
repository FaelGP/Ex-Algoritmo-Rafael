#include <stdio.h>

int main() {
    int array[5];

    printf("Informe 5 valores inteiros:\n");
    for (int i = 0; i < 5; i++) {
        scanf("%d", &array[i]);
    }

    printf("O dobro de cada valor:\n");
    for (int i = 0; i < 5; i++) {
        int *ptr = &array[i];
        printf("%d\n", *ptr * 2);
    }
    return 0;
}
