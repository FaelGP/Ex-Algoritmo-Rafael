#include <stdio.h>

void calcularSoma(int *a, int b) {
    *a = *a + b;
}

int main() {
    int valor1, valor2;

    printf("Informe o primeiro valor: ");
    scanf("%d", &valor1);

    printf("Informe o segundo valor: ");
    scanf("%d", &valor2);

    calcularSoma(&valor1, valor2);

    printf("O valor de A e: %d\n", valor1);
    printf("O valor de B e: %d\n", valor2);

    return 0;
}
