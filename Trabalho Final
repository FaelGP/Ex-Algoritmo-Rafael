#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    char codigo[20];
    char descricao[100];
    int quantidade;
    float valor;
} Produto;

Produto estoque[100];
int numProdutos = 0;

void inicializarEstoque() {
    numProdutos = 0;
}
void adicionarProduto() {
    Produto produto;

    printf("Informe o codigo do produto: ");
    scanf("%s", produto.codigo);

    printf("Informe a descricao do produto: ");
    scanf(" %[^\n]", produto.descricao);

    printf("Informe a quantidade do produto: ");
    scanf("%d", &produto.quantidade);

    printf("Informe o valor do produto: ");
    scanf("%f", &produto.valor);

    estoque[numProdutos] = produto;
    numProdutos++;

    printf("Produto adicionado ao estoque.\n");
}

void gerarRelatorio() {
    printf("Relatorio de Produtos:\n");

    for (int i = 0; i < numProdutos; i++) {
        Produto produto = estoque[i];

        printf("Codigo: %s\n", produto.codigo);
        printf("Descricao: %s\n", produto.descricao);
        printf("Quantidade: %d\n", produto.quantidade);
        printf("Valor: R$ %.2f\n", produto.valor);
        printf("\n");
    }
}

void pesquisarProduto() {
    char codigo[20];
    int encontrado = 0;

    printf("Informe o codigo do produto: ");
    scanf("%s", codigo);

    for (int i = 0; i < numProdutos; i++) {
        Produto produto = estoque[i];

        if (strcmp(produto.codigo, codigo) == 0) {
            printf("Produto encontrado:\n");
            printf("Codigo: %s\n", produto.codigo);
            printf("Descricao: %s\n", produto.descricao);
            printf("Quantidade: %d\n", produto.quantidade);
            printf("Valor: R$ %.2f\n", produto.valor);
            encontrado = 1;
            break;
        }
    }

    if (!encontrado) {
        printf("Produto nao encontrado.\n");
    }
}

void removerProduto() {
    char codigo[20];
    int encontrado = 0;

    printf("Informe o codigo do produto a ser removido: ");
    scanf("%s", codigo);

    for (int i = 0; i < numProdutos; i++) {
        Produto produto = estoque[i];

        if (strcmp(produto.codigo, codigo) == 0) {
            for (int j = i; j < numProdutos - 1; j++) {
                estoque[j] = estoque[j+1];
            }
            numProdutos--;
            printf("Produto removido do estoque.\n");
            encontrado = 1;
            break;
        }
    }

    if (!encontrado) {
        printf("Produto nao cadastrado no estoque.\n");
    }
}

void exibirMenu() {
    printf(" !Mercado do seu Jao! \n");
    printf("1 - Cadastrar produto\n");
    printf("2 - Consultar produtos\n");
    printf("3 - Imprimir relatorio de produtos\n");
    printf("4 - Remover produto\n");
    printf("0 - Sair\n");
}

int main() {
    int opcao;

    inicializarEstoque();

    do {
        exibirMenu();
        printf("Informe a opcao desejada: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                adicionarProduto();
                break;
            case 2:
                pesquisarProduto();
                break;
            case 3:
                gerarRelatorio();
                break;
            case 4:
                removerProduto();
                break;
            case 0:
                break;
            default:
                printf("Opcao invalida. Tente novamente.\n");
                break;
        }
    } while (opcao != 0);

    return 0;
}
